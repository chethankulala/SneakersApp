<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Unselected state -->
    <item android:state_selected="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/dark_blue" />
                    <corners android:radius="20dp" /> <!-- Adjust radius as needed -->
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- Selected state -->
    <item android:state_selected="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/dark_blue" />
                    <corners android:radius="20dp" /> <!-- Adjust radius as needed -->
                </shape>
            </item>
            <item android:drawable="@drawable/ic_check_white" android:gravity="center|center_vertical" />
        </layer-list>
    </item>
</selector>
